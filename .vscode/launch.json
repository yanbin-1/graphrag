{
	"_comment": "Use this file to configure the graphrag project for debugging. You may create other configuration profiles based on these or select one below to use.",
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Direct GraphRAG Index",
			"type": "debugpy",
			"request": "launch",
			"module": "graphrag",
			"args": ["index", "--root", "./rag"],
			"console": "integratedTerminal"
		  },
		{
			"name": "Query",
			"type": "debugpy",
			"request": "launch",
			"module": "poetry",
			"args": [
				"poe", "query",
				"--root", "<path_to_ragtest_root_demo>",
				"--method", "global",
				"--query", "What are the top themes in this story",
			]
		},
		{
			"name": "Prompt Tuning",
			"type": "debugpy",
			"request": "launch",
			"module": "poetry",
			"args": [
				"poe", "prompt-tune",
				"--config",
				"<path_to_ragtest_root_demo>/settings.yaml",
			]
		}
	]
}